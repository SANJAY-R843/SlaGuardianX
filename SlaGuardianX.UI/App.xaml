<Application x:Class="SlaGuardianX.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SlaGuardianX.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:OptimizationColorConverter x:Key="OptimizationColorConverter"/>
            <local:CpuHeatMapConverter x:Key="CpuHeatMapConverter"/>
            <local:RamHeatMapConverter x:Key="RamHeatMapConverter"/>
            <local:ServiceStatusColorConverter x:Key="ServiceStatusColorConverter"/>
            <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
