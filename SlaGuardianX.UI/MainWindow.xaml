<Window x:Class="SlaGuardianX.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlaGuardianX.UI"
        xmlns:views="clr-namespace:SlaGuardianX.UI.Views"
        mc:Ignorable="d"
        Title="SLA Guardian X" 
        Height="1080" 
        Width="1920"
        Background="#FF0D1117"
        Foreground="{StaticResource TextPrimaryBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        FontFamily="Segoe UI">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="0" ResizeBorderThickness="6"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="0" Background="#FF0D1117">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════ -->
            <!-- MINIMAL TITLE BAR                               -->
            <!-- ═══════════════════════════════════════════════ -->
            <Border Grid.Row="0" 
                    Background="#FF0D1117"
                    BorderThickness="0,0,0,1" 
                    BorderBrush="#FF21262D"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App title -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0" Grid.Column="0">
                        <Border Width="20" Height="20" CornerRadius="4" Margin="0,0,10,0" Background="#FF0D9488">
                            <TextBlock Text="◈" Foreground="White" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="SlaGuardianX" FontSize="13" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Breadcrumb -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Margin="16,0,0,0">
                        <TextBlock Text="{Binding CurrentModule.Category}" FontSize="11" 
                                   Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="  ›  " FontSize="11" Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Breadcrumb}" FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Chrome buttons -->
                    <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Stretch">
                        <Button Content="─" Style="{StaticResource ChromeButton}" Click="Minimize_Click"/>
                        <Button Content="☐" Style="{StaticResource ChromeButton}" Click="Maximize_Click"/>
                        <Button Content="✕" Style="{StaticResource ChromeCloseButton}" Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════ -->
            <!-- MAIN: SIDEBAR + CONTENT                         -->
            <!-- ═══════════════════════════════════════════════ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ═══════════════════════════════════════ -->
                <!-- MINIMAL SIDEBAR                          -->
                <!-- ═══════════════════════════════════════ -->
                <Border Grid.Column="0" 
                        Background="#FF0D1117" 
                        BorderThickness="0,0,1,0" 
                        BorderBrush="#FF21262D">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- SIDEBAR HEADER -->
                        <Border Grid.Row="0" Padding="16,16,16,12">
                            <StackPanel>
                                <TextBlock Text="SlaGuardianX" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="S Y S T E M   C A R E   C O C K P I T" FontSize="8" FontWeight="Medium" 
                                           Foreground="{StaticResource TextDimBrush}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- NAV ITEMS -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="0,0,0,8">
                            <ItemsControl ItemsSource="{Binding Modules}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.NavigateToCommand, 
                                                         RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Click="NavigationButton_Click"
                                                Cursor="Hand"
                                                HorizontalAlignment="Stretch">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Grid>
                                                                    <!-- Left accent bar -->
                                                                    <Border x:Name="accentBar" Width="3" HorizontalAlignment="Left" 
                                                                            CornerRadius="0,2,2,0" Background="Transparent" Margin="0,2"/>
                                                                    <!-- Content -->
                                                                    <Border x:Name="bg" Background="Transparent" 
                                                                            CornerRadius="6" Margin="6,1,10,1" Padding="10,8"
                                                                            BorderThickness="0">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="{Binding Icon}" FontSize="13" 
                                                                                       VerticalAlignment="Center" Margin="0,0,10,0"
                                                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                                                            <TextBlock x:Name="titleText" Text="{Binding Title}" 
                                                                                       FontSize="12" VerticalAlignment="Center"
                                                                                       Foreground="{TemplateBinding Foreground}"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="bg" Property="Background" Value="#FF161B22"/>
                                                                        <Setter TargetName="titleText" Property="Foreground" 
                                                                                Value="{StaticResource TextPrimaryBrush}"/>
                                                                    </Trigger>
                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                        <Setter TargetName="accentBar" Property="Background" 
                                                                                Value="{StaticResource AccentCyanBrush}"/>
                                                                        <Setter TargetName="bg" Property="Background" Value="#FF161B22"/>
                                                                        <Setter TargetName="titleText" Property="Foreground" 
                                                                                Value="{StaticResource AccentCyanBrush}"/>
                                                                        <Setter TargetName="titleText" Property="FontWeight" Value="Medium"/>
                                                                    </DataTrigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- SIDEBAR FOOTER -->
                        <Border Grid.Row="2" Padding="16,12" BorderThickness="0,1,0,0" 
                                BorderBrush="#FF21262D">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="{StaticResource AccentGreenBrush}" 
                                             Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="System Online" FontSize="11" 
                                               Foreground="{StaticResource AccentGreenBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="v1.0.0" FontSize="10" 
                                           Foreground="{StaticResource TextDimBrush}" Margin="14,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ═══════════════════════════════════════ -->
                <!-- MAIN CONTENT AREA                        -->
                <!-- ═══════════════════════════════════════ -->
                <Border Grid.Column="1" Background="#FF161B22">
                    <ContentControl Content="{Binding CurrentView}" Margin="0"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
