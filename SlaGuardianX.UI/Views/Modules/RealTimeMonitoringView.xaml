<UserControl x:Class="SlaGuardianX.UI.Views.Modules.RealTimeMonitoringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FF0D9488" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“¡" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Real-Time Monitoring" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Live system telemetry with auto-refresh every 2 seconds" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>

            <!-- Controls -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Button Content="â–¶ Start" Command="{Binding StartMonitoringCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
                        <Button Content="â—¼ Stop" Command="{Binding StopMonitoringCommand}" Style="{StaticResource DangerButton}" Margin="0,0,6,0"/>
                        <Button Content="â†» Refresh" Command="{Binding RefreshTelemetryCommand}" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Style="{StaticResource Badge}" Margin="0,0,6,0" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource BadgeText}" FontSize="10">
                                <Run Text="Updated: "/><Run Text="{Binding LastUpdated}" Foreground="{StaticResource AccentCyanBrush}"/>
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource Badge}" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource BadgeText}" FontSize="10">
                                <Run Text="Points: "/><Run Text="{Binding DataPointsCollected}" Foreground="{StaticResource AccentCyanBrush}"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Status -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <Ellipse Width="6" Height="6" Margin="0,0,8,0" VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#FFF59E0B"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMonitoring}" Value="True">
                                        <Setter Property="Fill" Value="#FF22C55E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                </DockPanel>
            </Border>

            <!-- Live Telemetry Cards -->
            <UniformGrid Columns="5" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="DOWNLOAD" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding Bandwidth, StringFormat='{}{0:F1}'}" Foreground="{StaticResource AccentCyanBrush}"/><Run Text=" Mbps" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="CPU" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding Latency, StringFormat='{}{0:F0}'}" Foreground="#FF9800"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="RAM" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding PacketLoss, StringFormat='{}{0:F0}'}" Foreground="#FF5252"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="DISK I/O" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding Jitter, StringFormat='{}{0:F1}'}" Foreground="#AB47BC"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="DISK FREE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding Uptime, StringFormat='{}{0:F1}'}" Foreground="#00E676"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Statistics Row -->
            <UniformGrid Columns="3" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="PEAK DOWNLOAD" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding PeakBandwidth, StringFormat='{}{0:F1}'}" Foreground="#00E676"/><Run Text=" Mbps" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="MIN DOWNLOAD" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding MinBandwidth, StringFormat='{}{0:F1}'}" Foreground="#FF5252"/><Run Text=" Mbps" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="AVG DOWNLOAD" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding AvgBandwidth, StringFormat='{}{0:F1}'}" Foreground="{StaticResource AccentCyanBrush}"/><Run Text=" Mbps" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Event Log -->
            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <TextBlock Text="Recent Events" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ListBox ItemsSource="{Binding RecentEvents}" Background="Transparent" BorderThickness="0" MaxHeight="200"
                             Foreground="{StaticResource TextSecondaryBrush}" FontFamily="Consolas" FontSize="11"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
