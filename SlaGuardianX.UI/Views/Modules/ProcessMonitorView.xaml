<UserControl x:Class="SlaGuardianX.UI.Views.Modules.ProcessMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FF8B5CF6" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="âš™ï¸" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Process Monitor" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Task Manager-like view with live CPU tracking, search, and end task" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>

            <!-- Summary Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="PROCESSES" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding TotalProcesses}" Foreground="{StaticResource AccentCyanBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="RAM USED" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding TotalMemoryMB, StringFormat='{}{0:N0}'}" Foreground="#FF9800"/>
                            <Run Text=" MB" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="THREADS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding TotalThreads}" Foreground="#AB47BC"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="UPDATED" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}" FontSize="16">
                            <Run Text="{Binding LastUpdated}" Foreground="#00E676"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Controls -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <TextBox Width="250" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MinimalTextBox}"/>
                        <TextBlock Text="ðŸ”" Margin="-30,0,16,0" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                        <Button Content="â†» Refresh" Command="{Binding RefreshProcessesCommand}" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>

            <!-- Top CPU and Top RAM side by side -->
            <UniformGrid Columns="2" Margin="0,0,0,12">
                <!-- Top CPU -->
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="ðŸ”¥ Top CPU Consumers" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding TopCpuProcesses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,6" Margin="0,2" Background="#FF161B22" CornerRadius="4">
                                        <DockPanel>
                                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" Width="140" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" FontSize="12"
                                                       Text="{Binding CpuPercent, StringFormat='{}{0:F1}%'}"
                                                       Foreground="{Binding CpuPercent, Converter={StaticResource CpuHeatMapConverter}}"/>
                                            <TextBlock Text="{Binding MemoryMB, StringFormat='{}{0:F0} MB'}" 
                                                       Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="10,0"/>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Top RAM -->
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¾ Top RAM Consumers" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding TopRamProcesses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,6" Margin="0,2" Background="#FF161B22" CornerRadius="4">
                                        <DockPanel>
                                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" Width="140" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" FontSize="12"
                                                       Text="{Binding MemoryMB, StringFormat='{}{0:F0} MB'}"
                                                       Foreground="{Binding MemoryMB, Converter={StaticResource RamHeatMapConverter}}"/>
                                            <TextBlock Text="{Binding CpuPercent, StringFormat='{}{0:F1}% CPU'}" 
                                                       Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="10,0"/>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- All Processes DataGrid -->
            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ All Processes" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding FilteredProcesses}" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              Background="Transparent" BorderThickness="0" GridLinesVisibility="None"
                              HeadersVisibility="Column" RowBackground="#FF161B22" AlternatingRowBackground="#FF1C2128"
                              Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"
                              MaxHeight="400" SelectionMode="Single"
                              SelectedItem="{Binding SelectedProcess}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF0D1117"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="70"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTemplateColumn Header="CPU %" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CpuPercent, StringFormat='{}{0:F1}'}" 
                                                   Foreground="{Binding CpuPercent, Converter={StaticResource CpuHeatMapConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="RAM (MB)" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MemoryMB, StringFormat='{}{0:F0}'}" 
                                                   Foreground="{Binding MemoryMB, Converter={StaticResource RamHeatMapConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Threads" Binding="{Binding ThreadCount}" Width="70"/>
                            <DataGridTemplateColumn Header="Action" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="End" Padding="8,4" FontSize="11"
                                                Command="{Binding DataContext.EndTaskCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding Pid}"
                                                Style="{StaticResource DangerButton}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
