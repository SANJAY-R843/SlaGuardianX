<UserControl x:Class="SlaGuardianX.UI.Views.Modules.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <TextBlock Text="Settings" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Application configuration and preferences" Style="{StaticResource PageSubtitle}" Margin="0,0,0,16"/>
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <TextBlock Text="{Binding SettingsStatus}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
            </Border>
            <UniformGrid Columns="3" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="TOTAL METRICS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding TotalMetrics}" Style="{StaticResource CardValue}" Foreground="{StaticResource AccentCyanBrush}"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="SLA RESULTS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding TotalSlaResults}" Style="{StaticResource CardValue}" Foreground="{StaticResource AccentPurpleBrush}"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="DB SIZE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding DatabaseSize}" Style="{StaticResource CardValue}" Foreground="#00E676"/></StackPanel>
                </Border>
            </UniformGrid>
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Style="{StaticResource Card}" Grid.Column="0" Margin="0,0,6,0" Padding="18">
                    <StackPanel>
                        <TextBlock Text="SLA Configuration" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Text="GUARANTEED BANDWIDTH (Mbps)" Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding GuaranteedBandwidth, UpdateSourceTrigger=PropertyChanged}" Background="#10FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" Margin="0,0,0,10"/>
                        <TextBlock Text="REFRESH INTERVAL (ms)" Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding RefreshIntervalMs, UpdateSourceTrigger=PropertyChanged}" Background="#10FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" Margin="0,0,0,10"/>
                        <TextBlock Text="THEME" Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,0,0,4"/>
                        <TextBlock Text="Dark (Default)" Foreground="{StaticResource AccentCyanBrush}" FontSize="12" Margin="0,0,0,12"/>
                        <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left" Padding="16,8"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Grid.Column="1" Margin="6,0,0,0" Padding="18">
                    <StackPanel>
                        <TextBlock Text="Database Management" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,6"><Run Text="Metrics: "/><Run Text="{Binding TotalMetrics}" Foreground="{StaticResource AccentCyanBrush}"/></TextBlock>
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,6"><Run Text="SLA Results: "/><Run Text="{Binding TotalSlaResults}" Foreground="{StaticResource AccentPurpleBrush}"/></TextBlock>
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,16"><Run Text="This will permanently remove all collected data from the database."/></TextBlock>
                        <Button Content="Reset Database" Command="{Binding ResetDatabaseCommand}" Style="{StaticResource DangerButton}" HorizontalAlignment="Left" Padding="16,8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
