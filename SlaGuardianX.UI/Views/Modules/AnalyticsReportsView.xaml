<UserControl x:Class="SlaGuardianX.UI.Views.Modules.AnalyticsReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FF0D9488" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“Š" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Analytics &amp; Reports" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="System performance analytics with export capabilities" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Content="Refresh" Command="{Binding RefreshAnalyticsCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Export JSON" Command="{Binding ExportPdfCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Export CSV" Command="{Binding ExportCsvCommand}" Style="{StaticResource AccentPurpleButton}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="HEALTH SCORE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding SlaComplianceTrend, StringFormat='{}{0:F1}'}" Foreground="#00E676"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="VIOLATIONS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding ViolationFrequency}" Style="{StaticResource CardValue}" Foreground="#FF5252"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="PEAK HOUR" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding PeakUsageHour}" Foreground="#FF9800"/><Run Text=":00" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="OPTIMIZATION" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding OptimizationImpact, StringFormat='{}{0:F1}'}" Foreground="#AB47BC"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
            </UniformGrid>
            <UniformGrid Columns="3" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="AVG CPU" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding AvgBandwidth, StringFormat='{}{0:F1}'}" Foreground="{StaticResource AccentCyanBrush}"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="AVG RAM" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding AvgLatency, StringFormat='{}{0:F0}'}" Foreground="#FF9800"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="AVG DISK" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding AvgPacketLoss, StringFormat='{}{0:F1}'}" Foreground="#FF5252"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
            </UniformGrid>
            <Border Style="{StaticResource Card}" Padding="14">
                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                    <Run Text="Total metrics: "/><Run Text="{Binding TotalMetrics}" Foreground="{StaticResource AccentCyanBrush}"/>
                    <Run Text="  |  Optimized: "/><Run Text="{Binding OptimizedCount}" Foreground="#AB47BC"/>
                </TextBlock>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
