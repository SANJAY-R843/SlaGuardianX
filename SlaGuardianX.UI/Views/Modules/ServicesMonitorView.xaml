<UserControl x:Class="SlaGuardianX.UI.Views.Modules.ServicesMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FF3B82F6" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”§" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Windows Services" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Monitor and control Windows services with start, stop, and restart" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>

            <!-- Summary Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="TOTAL" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding TotalServices}" Foreground="{StaticResource AccentCyanBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="RUNNING" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding RunningServices}" Foreground="#22C55E"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="STOPPED" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding StoppedServices}" Foreground="#EF4444"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="UPDATED" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}" FontSize="16">
                            <Run Text="{Binding LastUpdated}" Foreground="#00E676"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Controls -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <TextBox Width="250" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MinimalTextBox}"/>
                        <TextBlock Text="ðŸ”" Margin="-30,0,16,0" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                        <Button Content="â†» Refresh" Command="{Binding RefreshServicesCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                        <CheckBox Content="Critical Only" IsChecked="{Binding ShowCriticalOnly}" 
                                  Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>

            <!-- Critical Services -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="14">
                <StackPanel>
                    <TextBlock Text="âš ï¸ Critical Services Status" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ItemsControl ItemsSource="{Binding CriticalServices}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,6" Margin="0,0,8,8" Background="#FF161B22" CornerRadius="4">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Margin="0,0,8,0"
                                                 Fill="{Binding Status, Converter={StaticResource ServiceStatusColorConverter}}"/>
                                        <TextBlock Text="{Binding DisplayName}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" MaxWidth="200" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- All Services DataGrid -->
            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ All Services" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding FilteredServices}" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                              Background="Transparent" BorderThickness="0" GridLinesVisibility="None"
                              HeadersVisibility="Column" RowBackground="#FF161B22" AlternatingRowBackground="#FF1C2128"
                              Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"
                              MaxHeight="400" SelectionMode="Single"
                              SelectedItem="{Binding SelectedService}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF0D1117"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Service Name" Binding="{Binding ServiceName}" Width="180"/>
                            <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="250"/>
                            <DataGridTemplateColumn Header="Status" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Margin="0,0,6,0"
                                                     Fill="{Binding Status, Converter={StaticResource ServiceStatusColorConverter}}"/>
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="{Binding Status, Converter={StaticResource ServiceStatusColorConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="â–¶" ToolTip="Start" Padding="6,4" FontSize="10" Margin="0,0,4,0"
                                                    Command="{Binding DataContext.StartServiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding ServiceName}"
                                                    IsEnabled="{Binding IsStopped}"
                                                    Style="{StaticResource PrimaryButton}"/>
                                            <Button Content="â—¼" ToolTip="Stop" Padding="6,4" FontSize="10" Margin="0,0,4,0"
                                                    Command="{Binding DataContext.StopServiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding ServiceName}"
                                                    IsEnabled="{Binding CanStop}"
                                                    Style="{StaticResource DangerButton}"/>
                                            <Button Content="â†»" ToolTip="Restart" Padding="6,4" FontSize="10"
                                                    Command="{Binding DataContext.RestartServiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding ServiceName}"
                                                    IsEnabled="{Binding IsRunning}"
                                                    Style="{StaticResource SecondaryButton}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
