<UserControl x:Class="SlaGuardianX.UI.Views.Modules.RootCauseAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FFEF4444" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Root Cause Analyzer" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Real process-level root cause analysis" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <TextBlock Text="{Binding AnalysisStatus}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <Button Content="Analyze Now" Command="{Binding AnalyzeIssueCommand}" Style="{StaticResource PrimaryButton}" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
                </DockPanel>
            </Border>
            <UniformGrid Columns="3" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="CPU %" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}" Foreground="{StaticResource AccentCyanBrush}"><Run Text="{Binding AvgBandwidth, StringFormat=F1}"/><Run Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="RAM %" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}" Foreground="#FF9800"><Run Text="{Binding AvgLatency, StringFormat=F1}"/><Run Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="DISK USED" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}" Foreground="#FF5252"><Run Text="{Binding AvgPacketLoss, StringFormat=F1}"/><Run Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
            </UniformGrid>
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Style="{StaticResource Card}" Grid.Column="0" Margin="0,0,6,0" Padding="18">
                    <StackPanel>
                        <TextBlock Text="Detected Issue" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding DetectedIssue}" Foreground="#FF5252" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,12"/>
                        <TextBlock Text="SEVERITY" Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SeverityLevel}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock"><Setter Property="Foreground" Value="#FF9800"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SeverityLevel}" Value="Critical"><Setter Property="Foreground" Value="#FF5252"/></DataTrigger>
                                        <DataTrigger Binding="{Binding SeverityLevel}" Value="Low"><Setter Property="Foreground" Value="#00E676"/></DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="SAMPLES ANALYZED" Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SamplesAnalyzed}" Foreground="{StaticResource AccentCyanBrush}" FontSize="14"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Grid.Column="1" Margin="6,0,0,0" Padding="18">
                    <StackPanel>
                        <TextBlock Text="Recommendation" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding Recommendation}" Foreground="#00E676" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,16"/>
                        <TextBlock Text="Analysis Findings" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <ListBox ItemsSource="{Binding Findings}" Background="Transparent" BorderThickness="0" MaxHeight="200">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/><Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="#10FFFFFF" CornerRadius="3" Padding="8,5">
                                                    <TextBlock Text="{Binding}" Foreground="{StaticResource TextMutedBrush}" FontSize="11" TextWrapping="Wrap"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
