<UserControl x:Class="SlaGuardianX.UI.Views.Modules.UserRoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FF3B82F6" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ‘¥" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="User Profiles" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="System user profiles and access modes" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"><Run Text="Current Role: "/><Run Text="{Binding CurrentRole}" Foreground="{StaticResource AccentCyanBrush}" FontWeight="SemiBold"/></TextBlock>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding RoleStatus}" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="TOTAL USERS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding UserCount}" Style="{StaticResource CardValue}" Foreground="{StaticResource AccentCyanBrush}"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="ADMINS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding AdminCount}" Style="{StaticResource CardValue}" Foreground="#FF9800"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="OPERATORS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding OperatorCount}" Style="{StaticResource CardValue}" Foreground="#00E676"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="VIEWERS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding ViewerCount}" Style="{StaticResource CardValue}" Foreground="{StaticResource AccentPurpleBrush}"/></StackPanel>
                </Border>
            </UniformGrid>
            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <TextBlock Text="User Directory" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding Users}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#10FFFFFF" CornerRadius="4" Padding="10,8" Margin="0,2">
                                    <DockPanel>
                                        <Ellipse Width="28" Height="28" Margin="0,0,10,0" VerticalAlignment="Center">
                                            <Ellipse.Fill><SolidColorBrush Color="#30FFFFFF"/></Ellipse.Fill>
                                        </Ellipse>
                                        <StackPanel Width="150" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Email}" Foreground="{StaticResource TextMutedBrush}" FontSize="10"/>
                                        </StackPanel>
                                        <Border CornerRadius="4" Padding="8,2" VerticalAlignment="Center" Width="80" Margin="8,0">
                                            <Border.Style>
                                                <Style TargetType="Border"><Setter Property="Background" Value="#1E3A5F"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="Admin"><Setter Property="Background" Value="#33FF9800"/></DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="Operator"><Setter Property="Background" Value="#3300E676"/></DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Role}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="11" HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock VerticalAlignment="Center" FontSize="11" Width="90" Margin="8,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"><Setter Property="Foreground" Value="#FF5252"/><Setter Property="Text" Value="Restricted"/>
                                                    <Style.Triggers><DataTrigger Binding="{Binding CanModifySettings}" Value="True"><Setter Property="Foreground" Value="#00E676"/><Setter Property="Text" Value="Full Access"/></DataTrigger></Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Button Content="Manage" Command="{Binding DataContext.ManageRoleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" Style="{StaticResource SecondaryButton}" Padding="8,3" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
