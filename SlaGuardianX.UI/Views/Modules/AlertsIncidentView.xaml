<UserControl x:Class="SlaGuardianX.UI.Views.Modules.AlertsIncidentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FFEF4444" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="âš " FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Alerts &amp; Incidents" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Real-time alert monitoring with severity classification" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Content="Clear All" Command="{Binding ClearAlertsCommand}" Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="CRITICAL" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding CriticalAlerts}" FontSize="28" FontWeight="SemiBold" Foreground="#FFEF4444" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="WARNING" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding WarningAlerts}" FontSize="28" FontWeight="SemiBold" Foreground="#FFF59E0B" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="INFO" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding InfoAlerts}" FontSize="28" FontWeight="SemiBold" Foreground="#FF22C55E" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="TOTAL" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding TotalAlerts}" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="14">
                <StackPanel>
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4" FontSize="12">
                        <Run Text="Last Incident: "/><Run Text="{Binding LastIncidentTime}" Foreground="#FF9800"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <TextBlock Text="Alert Log" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ListBox ItemsSource="{Binding AlertLog}" Background="Transparent" BorderThickness="0" MaxHeight="300"
                             Foreground="{StaticResource TextSecondaryBrush}" FontFamily="Consolas" FontSize="11"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
