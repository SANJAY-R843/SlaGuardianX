<UserControl x:Class="SlaGuardianX.UI.Views.Modules.AlertsIncidentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <TextBlock Text="Alerts &amp; Incidents" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Real-time alert monitoring with severity classification" Style="{StaticResource PageSubtitle}" Margin="0,0,0,16"/>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Content="Clear All" Command="{Binding ClearAlertsCommand}" Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Margin="0,0,6,0" Padding="14" CornerRadius="6" Background="#20FF5252" BorderBrush="#40FF5252" BorderThickness="1">
                    <StackPanel><TextBlock Text="CRITICAL" Style="{StaticResource CardLabel}" Foreground="#FF5252"/>
                        <TextBlock Text="{Binding CriticalAlerts}" Style="{StaticResource CardValue}" Foreground="#FF5252"/></StackPanel>
                </Border>
                <Border Margin="3,0" Padding="14" CornerRadius="6" Background="#20FF9800" BorderBrush="#40FF9800" BorderThickness="1">
                    <StackPanel><TextBlock Text="WARNING" Style="{StaticResource CardLabel}" Foreground="#FF9800"/>
                        <TextBlock Text="{Binding WarningAlerts}" Style="{StaticResource CardValue}" Foreground="#FF9800"/></StackPanel>
                </Border>
                <Border Margin="3,0" Padding="14" CornerRadius="6" Background="#204ADE80" BorderBrush="#404ADE80" BorderThickness="1">
                    <StackPanel><TextBlock Text="INFO" Style="{StaticResource CardLabel}" Foreground="#00E676"/>
                        <TextBlock Text="{Binding InfoAlerts}" Style="{StaticResource CardValue}" Foreground="#00E676"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="TOTAL" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding TotalAlerts}" Style="{StaticResource CardValue}" Foreground="{StaticResource AccentCyanBrush}"/></StackPanel>
                </Border>
            </UniformGrid>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="14">
                <StackPanel>
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4" FontSize="12">
                        <Run Text="Last Incident: "/><Run Text="{Binding LastIncidentTime}" Foreground="#FF9800"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <TextBlock Text="Alert Log" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ListBox ItemsSource="{Binding AlertLog}" Background="Transparent" BorderThickness="0" MaxHeight="300"
                             Foreground="{StaticResource TextSecondaryBrush}" FontFamily="Consolas" FontSize="11"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
