<UserControl x:Class="SlaGuardianX.UI.Views.Modules.TopologyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FF6E7681" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ’»" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Device &amp; Hardware" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="System hardware inventory via WMI" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <DockPanel>
                    <TextBlock Text="{Binding TopologyStatus}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"><Run Text="Scan: "/><Run Text="{Binding LastScanTime}" Foreground="{StaticResource AccentCyanBrush}"/></TextBlock>
                        <Button Content="Rescan" Command="{Binding RefreshTopologyCommand}" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="TOTAL DEVICES" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding DeviceCount}" Style="{StaticResource CardValue}" Foreground="{StaticResource AccentCyanBrush}"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="ONLINE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding OnlineDevices}" Style="{StaticResource CardValue}" Foreground="#00E676"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="OFFLINE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding OfflineDevices}" Style="{StaticResource CardValue}" Foreground="#FF5252"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="ALERTING" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding AlertingDevices}" Style="{StaticResource CardValue}" Foreground="#FF9800"/></StackPanel>
                </Border>
            </UniformGrid>
            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <TextBlock Text="Hardware Inventory" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding Devices}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#10FFFFFF" CornerRadius="4" Padding="10,8" Margin="0,2">
                                    <DockPanel>
                                        <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse"><Setter Property="Fill" Value="#FF5252"/>
                                                    <Style.Triggers><DataTrigger Binding="{Binding IsOnline}" Value="True"><Setter Property="Fill" Value="#00E676"/></DataTrigger></Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" FontWeight="SemiBold" Width="140"/>
                                        <TextBlock Text="{Binding DeviceType}" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Width="100"/>
                                        <TextBlock Text="{Binding IpAddress}" Foreground="{StaticResource AccentCyanBrush}" FontSize="11" FontFamily="Consolas" Width="130"/>
                                        <TextBlock Text="{Binding Status}" FontSize="11" Width="60">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"><Setter Property="Foreground" Value="#FF5252"/>
                                                    <Style.Triggers><DataTrigger Binding="{Binding IsOnline}" Value="True"><Setter Property="Foreground" Value="#00E676"/></DataTrigger></Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Uptime}" Foreground="{StaticResource TextMutedBrush}" FontSize="11" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
