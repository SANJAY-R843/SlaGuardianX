<UserControl x:Class="SlaGuardianX.UI.Views.Modules.OptimizationControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <TextBlock Text="Optimization Control" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Adaptive bandwidth optimization and QoS traffic shaping engine" Style="{StaticResource PageSubtitle}" Margin="0,0,0,16"/>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}"/>
            </Border>

            <UniformGrid Columns="3" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="BEFORE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding BeforeBandwidth, StringFormat='{}{0:F1}'}" Foreground="#FF9800"/><Run Text=" Mbps" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="AFTER" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding AfterBandwidth, StringFormat='{}{0:F1}'}" Foreground="#00E676"/><Run Text=" Mbps" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="IMPROVEMENT" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="+" Foreground="{StaticResource AccentCyanBrush}"/><Run Text="{Binding ImprovementMbps, StringFormat='{}{0:F1}'}" Foreground="{StaticResource AccentCyanBrush}"/><Run Text=" Mbps" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
            </UniformGrid>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                <StackPanel>
                    <TextBlock Text="Optimization Controls" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4" FontSize="12"><Run Text="Strategy: "/><Run Text="{Binding OptimizationStrategy}" Foreground="{StaticResource AccentCyanBrush}"/></TextBlock>
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12" FontSize="12"><Run Text="Boost Factor: "/><Run Text="{Binding OptimizationBoost, StringFormat='{}{0:F0}'}" Foreground="#00E676"/><Run Text="%"/></TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Run Optimization" Command="{Binding RunOptimizationCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Disable" Command="{Binding DisableOptimizationCommand}" Style="{StaticResource DangerButton}" Margin="0,0,8,0"/>
                        <Button Content="Toggle QoS" Command="{Binding EnableSmartQosCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Toggle BG Limiter" Command="{Binding EnableBackgroundLimiterCommand}" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <UniformGrid Columns="2">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="Smart QoS" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock FontSize="14" FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Disabled"/><Setter Property="Foreground" Value="#FF5252"/>
                                    <Style.Triggers><DataTrigger Binding="{Binding IsSmartQosEnabled}" Value="True"><Setter Property="Text" Value="Enabled"/><Setter Property="Foreground" Value="#00E676"/></DataTrigger></Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="Background Limiter" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock FontSize="14" FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Disabled"/><Setter Property="Foreground" Value="#FF5252"/>
                                    <Style.Triggers><DataTrigger Binding="{Binding IsBackgroundLimiterEnabled}" Value="True"><Setter Property="Text" Value="Enabled"/><Setter Property="Foreground" Value="#00E676"/></DataTrigger></Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
