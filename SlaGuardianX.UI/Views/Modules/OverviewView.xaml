<UserControl x:Class="SlaGuardianX.UI.Views.Modules.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header Section -->
            <StackPanel Margin="0,0,0,20">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="28" Height="28" CornerRadius="6" Background="#FF0D9488" Margin="0,0,12,0" VerticalAlignment="Center">
                                <TextBlock Text="⚡" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="System Overview" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Real-time system health and performance dashboard" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
                    </StackPanel>
                </DockPanel>
            </StackPanel>

            <!-- Status Bar -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16" Padding="14">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8" Fill="#FF22C55E" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Last updated: " Foreground="{StaticResource TextMutedBrush}" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding LastUpdated}" Foreground="{StaticResource AccentCyanBrush}" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Monitoring Controls -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16" Padding="12">
                <StackPanel Orientation="Horizontal">
                    <Button Content="▶ Start Monitoring" Command="{Binding StartMonitoringCommand}" 
                            Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                    <Button Content="◼ Stop Monitoring" Command="{Binding StopMonitoringCommand}" 
                            Style="{StaticResource DangerButton}" Margin="0,0,8,0"/>
                    <Button Content="↻ Refresh" Command="{Binding RefreshMetricsCommand}" 
                            Style="{StaticResource SecondaryButton}" Margin="0,0,12,0"/>
                    <Border Style="{StaticResource Badge}" VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource BadgeText}">
                            <Run Text="Data Points: "/><Run Text="{Binding TotalDataPoints}" Foreground="{StaticResource AccentCyanBrush}"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Metric Cards Row 1 -->
            <UniformGrid Columns="4" Margin="0,0,0,10">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="DOWNLOAD" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding CurrentBandwidth, StringFormat='{}{0:F1}'}" 
                                       FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text=" Mbps" FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="HEALTH SCORE" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding SlaCompliancePercentage, StringFormat='{}{0:F1}'}" 
                                       FontSize="28" FontWeight="SemiBold" Foreground="#FF22C55E"/>
                            <TextBlock Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="RISK SCORE" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding RiskScore, StringFormat='{}{0:F1}'}" 
                                       FontSize="28" FontWeight="SemiBold" Foreground="#FFF59E0B"/>
                            <TextBlock Text=" / 100" FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="UPLOAD" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding PredictedBandwidth, StringFormat='{}{0:F1}'}" 
                                       FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text=" Mbps" FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Metric Cards Row 2 -->
            <UniformGrid Columns="4" Margin="0,0,0,16">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="CPU" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding CurrentLatency, StringFormat='{}{0:F0}'}" 
                                       FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="RAM" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding CurrentPacketLoss, StringFormat='{}{0:F0}'}" 
                                       FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="DISK USED" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding CurrentUptime, StringFormat='{}{0:F0}'}" 
                                       FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="STATUS" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding OptimizationStatus}" FontSize="24" FontWeight="SemiBold" 
                                   Foreground="#FF22C55E" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Alerts Section -->
            <Border Style="{StaticResource Card}" Padding="14">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Active Alerts" Foreground="{StaticResource TextPrimaryBrush}" 
                                   FontSize="13" FontWeight="SemiBold"/>
                        <Border Style="{StaticResource BadgeAccent}" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ActiveAlertCount}" FontSize="10" FontWeight="Medium" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                        <Run Text="Total active alerts: "/><Run Text="{Binding ActiveAlertCount}" Foreground="#FFEF4444" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
