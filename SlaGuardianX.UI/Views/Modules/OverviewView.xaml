<UserControl x:Class="SlaGuardianX.UI.Views.Modules.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="System Overview" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Real-time network operations center dashboard" Style="{StaticResource PageSubtitle}" Margin="0,0,0,20"/>

            <!-- Status Bar -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16" Padding="16">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Ellipse Width="10" Height="10" Fill="#00E676" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <TextBlock Text="Last updated: " Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding LastUpdated}" Foreground="{StaticResource AccentCyanBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Monitoring Controls -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16" Padding="16">
                <StackPanel Orientation="Horizontal">
                    <Button Content="&#x25B6; Start Monitoring" Command="{Binding StartMonitoringCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                    <Button Content="&#x23F8; Stop Monitoring" Command="{Binding StopMonitoringCommand}" Style="{StaticResource DangerButton}" Margin="0,0,8,0"/>
                    <Button Content="&#x21BB; Refresh" Command="{Binding RefreshMetricsCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,16,0"/>
                    <Border Background="#10FFFFFF" CornerRadius="4" Padding="10,6" VerticalAlignment="Center">
                        <TextBlock Foreground="{StaticResource TextMutedBrush}">
                            <Run Text="Data Points: "/><Run Text="{Binding TotalDataPoints}" Foreground="{StaticResource AccentCyanBrush}"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Metric Cards Row 1 -->
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,8,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="BANDWIDTH" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding CurrentBandwidth, StringFormat='{}{0:F1}'}" Foreground="{StaticResource AccentCyanBrush}"/><Run Text=" Mbps" Foreground="{StaticResource TextMutedBrush}" FontSize="13"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="4,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="SLA COMPLIANCE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding SlaCompliancePercentage, StringFormat='{}{0:F1}'}" Foreground="#00E676"/><Run Text="%" Foreground="{StaticResource TextMutedBrush}" FontSize="13"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="4,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="RISK SCORE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding RiskScore, StringFormat='{}{0:F1}'}" Foreground="#FF9800"/><Run Text=" / 100" Foreground="{StaticResource TextMutedBrush}" FontSize="13"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="8,0,0,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="PREDICTED BW" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding PredictedBandwidth, StringFormat='{}{0:F1}'}" Foreground="#AB47BC"/><Run Text=" Mbps" Foreground="{StaticResource TextMutedBrush}" FontSize="13"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Metric Cards Row 2 -->
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,8,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="LATENCY" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding CurrentLatency, StringFormat='{}{0:F0}'}" Foreground="{StaticResource AccentCyanBrush}"/><Run Text=" ms" Foreground="{StaticResource TextMutedBrush}" FontSize="13"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="4,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="PACKET LOSS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding CurrentPacketLoss, StringFormat='{}{0:F2}'}" Foreground="#FF5252"/><Run Text="%" Foreground="{StaticResource TextMutedBrush}" FontSize="13"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="4,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="UPTIME" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}">
                            <Run Text="{Binding CurrentUptime, StringFormat='{}{0:F2}'}" Foreground="#00E676"/><Run Text="%" Foreground="{StaticResource TextMutedBrush}" FontSize="13"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="8,0,0,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="OPTIMIZATION" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding OptimizationStatus}" Style="{StaticResource CardValue}" Foreground="#AB47BC"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Alerts Summary -->
            <Border Style="{StaticResource Card}" Padding="16">
                <StackPanel>
                    <TextBlock Text="Active Alerts" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                        <Run Text="Total active alerts: "/><Run Text="{Binding ActiveAlertCount}" Foreground="#FF5252" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
