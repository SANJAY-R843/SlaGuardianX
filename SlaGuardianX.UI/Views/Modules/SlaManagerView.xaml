<UserControl x:Class="SlaGuardianX.UI.Views.Modules.SlaManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
        <StackPanel>
            <!-- Header -->
            <StackPanel Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="28" Height="28" CornerRadius="6" Background="#FF8B5CF6" Margin="0,0,12,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Health Rules" Style="{StaticResource PageTitle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Health rule configuration and system compliance tracking" Style="{StaticResource PageSubtitle}" Margin="40,4,0,0"/>
            </StackPanel>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}"/>
            </Border>

            <!-- SLA Metrics -->
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="COMPLIANCE" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding CompliancePercentage, StringFormat='{}{0:F1}'}" FontSize="28" FontWeight="SemiBold" Foreground="#FF22C55E"/>
                            <TextBlock Text="%" FontSize="12" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="VIOLATIONS" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding TotalViolations}" FontSize="28" FontWeight="SemiBold" Foreground="#FFEF4444" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="RULE VIOLATIONS" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding PenaltyEstimate, StringFormat='{}{0:N0}'}" FontSize="28" FontWeight="SemiBold" Foreground="#FFF59E0B" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel>
                        <TextBlock Text="RECORDS" Style="{StaticResource CardLabel}" FontSize="10"/>
                        <TextBlock Text="{Binding TotalRecords}" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- SLA Profile Configuration -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                <StackPanel>
                    <TextBlock Text="Health Rule Configuration" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <UniformGrid Columns="3" Margin="0,0,0,12">
                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="CPU Threshold (%)" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding GuaranteedBandwidth, UpdateSourceTrigger=PropertyChanged}" Background="#15FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="RAM Threshold (%)" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding MaxLatency, UpdateSourceTrigger=PropertyChanged}" Background="#15FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" FontSize="13"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Disk Threshold (%)" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding MaxPacketLoss, UpdateSourceTrigger=PropertyChanged}" Background="#15FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" FontSize="13"/>
                        </StackPanel>
                    </UniformGrid>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save Rules" Command="{Binding SaveSlaProfileCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Run Health Check" Command="{Binding RunSlaCheckCommand}" Style="{StaticResource AccentPurpleButton}" Margin="0,0,8,0"/>
                        <Button Content="Re-evaluate" Command="{Binding CalculatePenaltyCommand}" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
