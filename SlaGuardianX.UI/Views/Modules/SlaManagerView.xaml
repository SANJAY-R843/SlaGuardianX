<UserControl x:Class="SlaGuardianX.UI.Views.Modules.SlaManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <TextBlock Text="SLA Manager" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="Service Level Agreement configuration and compliance tracking" Style="{StaticResource PageSubtitle}" Margin="0,0,0,16"/>

            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="12">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}"/>
            </Border>

            <!-- SLA Metrics -->
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource Card}" Margin="0,0,6,0" Padding="14">
                    <StackPanel><TextBlock Text="COMPLIANCE" Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="{Binding CompliancePercentage, StringFormat='{}{0:F1}'}" Foreground="#00E676"/><Run Text="%" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="VIOLATIONS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding TotalViolations}" Style="{StaticResource CardValue}" Foreground="#FF5252"/></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="3,0" Padding="14">
                    <StackPanel><TextBlock Text="PENALTY EST." Style="{StaticResource CardLabel}"/>
                        <TextBlock Style="{StaticResource CardValue}"><Run Text="$" Foreground="#FF9800"/><Run Text="{Binding PenaltyEstimate, StringFormat='{}{0:N0}'}" Foreground="#FF9800"/></TextBlock></StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0,0,0" Padding="14">
                    <StackPanel><TextBlock Text="RECORDS" Style="{StaticResource CardLabel}"/>
                        <TextBlock Text="{Binding TotalRecords}" Style="{StaticResource CardValue}" Foreground="{StaticResource AccentCyanBrush}"/></StackPanel>
                </Border>
            </UniformGrid>

            <!-- SLA Profile Configuration -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,12" Padding="16">
                <StackPanel>
                    <TextBlock Text="SLA Profile Configuration" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <UniformGrid Columns="3" Margin="0,0,0,12">
                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="Guaranteed Bandwidth (Mbps)" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding GuaranteedBandwidth, UpdateSourceTrigger=PropertyChanged}" Background="#15FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="Max Latency (ms)" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding MaxLatency, UpdateSourceTrigger=PropertyChanged}" Background="#15FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" FontSize="13"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Max Packet Loss (%)" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding MaxPacketLoss, UpdateSourceTrigger=PropertyChanged}" Background="#15FFFFFF" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="#25FFFFFF" Padding="8,6" FontSize="13"/>
                        </StackPanel>
                    </UniformGrid>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save Profile" Command="{Binding SaveSlaProfileCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Run SLA Check" Command="{Binding RunSlaCheckCommand}" Style="{StaticResource AccentPurpleButton}" Margin="0,0,8,0"/>
                        <Button Content="Calculate Penalty" Command="{Binding CalculatePenaltyCommand}" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
